if [ ! -n "$PROJECT_ROOT" ]; then
  echo "[ bash_customizations ] WARNING: PROJECT_ROOT is not set - this will break RubyGems and NPM"
fi
export GEM_HOME=${PROJECT_ROOT}/local-gems/gem-home
export NPM_CONFIG_PREFIX=${PROJECT_ROOT}/.npm-global
export PATH=${PATH}:${GEM_HOME}/bin:${NPM_CONFIG_PREFIX}/bin
